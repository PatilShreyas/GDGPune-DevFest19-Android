<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrollingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                tools:text="@string/text_schedule_title"
                style="@style/ScheduleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_title"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="22sp"/>

        <TextView
                tools:text="11:30 AM"
                style="@style/ScheduleNormalText"
                android:drawableStart="@drawable/ic_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_time"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/schedule_speaker"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:drawableStart="@drawable/ic_level"
                tools:text="Beginner"
                style="@style/ScheduleNormalText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_level"

                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/schedule_time"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="16dp"/>

        <TextView
                style="@style/Tag.Inline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:drawableStart="@drawable/tag_dot"
                tools:drawableTint="#f0f"
                tools:text="Android"
                android:id="@+id/schedule_tag"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/schedule_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.009"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_desription"
                tools:text="Get an overview of the latest developer features in Android hello hello hello hello hello hellohello hellohellohellohello hellohellohello hellohellov"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/schedule_tag"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:drawableStart="@drawable/ic_person"
                style="@style/ScheduleNormalText"
                tools:text="Chris Banes"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_speaker"
                app:layout_constraintTop_toBottomOf="@+id/schedule_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>