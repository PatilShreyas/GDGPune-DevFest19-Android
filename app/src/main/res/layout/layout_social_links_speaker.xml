<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonWeb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_web"
            style="@style/SocialButtonSpeaker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonTwitter"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTwitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_twitter"
            style="@style/SocialButtonSpeaker"
            app:layout_constraintStart_toEndOf="@+id/buttonWeb"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonLinkedIn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLinkedIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_linkedin"
            style="@style/SocialButtonSpeaker"
            app:layout_constraintStart_toEndOf="@+id/buttonTwitter"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/buttonGitHub"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGitHub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_github"
            style="@style/SocialButtonSpeaker"
            app:layout_constraintStart_toEndOf="@+id/buttonLinkedIn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>